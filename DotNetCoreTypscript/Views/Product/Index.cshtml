@model List<ProductViewModel>
@{
    ViewData["Title"] = "Product Listing";
}

<div id="products">
    @foreach (var product in Model)
    {
        <div class="product">
            <img src="~/img/@product.ImageFileName" alt="@product.Name">
            <div class="description">@product.ShortDescription</div>
            <button class="view-details" data-product-id="@product.Id">View Details</button>
        </div>
    }
</div>